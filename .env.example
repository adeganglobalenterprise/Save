# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:8080

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/banking-app
MONGODB_TEST_URI=mongodb://localhost:27017/banking-app-test

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this
JWT_REFRESH_EXPIRE=30d

# API Key Configuration
API_KEY_SECRET=your-api-key-secret-change-this

# Encryption Keys
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Email Configuration (for transaction alerts)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@globalbanking.com

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-this

# Mining Configuration
MINING_INTERVAL=3600000
CURRENCY_MINING_AMOUNT=1000
CRYPTO_MINING_AMOUNT=1
ADDRESS_GENERATION_RATE=1000

# Trading Configuration
TRADING_ROBOT_INTERVAL=60000
DEFAULT_TRADING_CAPITAL=10000

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@globalbanking.com
ADMIN_PASSWORD=ChangeThisPassword123!